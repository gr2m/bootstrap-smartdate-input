{
  "name": "smartdate-input",
  "description": "A plugin that understands human date/time inputs & their format",
  "browser": "index.js",
  "files": [
    "dist/",
    "demo/"
  ],
  "scripts": {
    "prebuild": "rimraf dist && mkdirp dist",
    "build": "browserify index.js -s smartdate-input -o dist/smartdate-input.js",
    "postbuild": "uglifyjs dist/smartdate-input.js -mc > dist/smartdate-input.min.js",
    "build:demo": "browserify index.js -s smartdate-input -o demo/smartdate-input.js && browserify demo/vendor.js -o demo/bundle.src.js",
    "postbuild:demo": "uglifyjs demo/bundle.src.js -mc > demo/bundle.js",
    "deploy": "npm run build:demo && npm run deploydocs",
    "predeploydocs": "./bin/authorize-push.js",
    "deploydocs": "gh-pages-deploy",
    "install_selenium_and_chromedriver": "install_chromedriver && install_selenium",
    "kill_selenium": "kill_selenium",
    "start": "./bin/demo-server.js",
    "start_selenium": "start_selenium",
    "start_selenium_with_chromedriver": "start_selenium_with_chromedriver",
    "pretest": "standard",
    "test": "./bin/test-background",
    "test:mocha": "mocha test/test-*.js",
    "test:mocha:watch": "mocha test/test-*.js --watch --reporter min",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gr2m/smartdate-input.git"
  },
  "keywords": [
    "date",
    "parse",
    "momentjs",
    "jquery-plugin",
    "input"
  ],
  "author": "Gregor Martynus <gregor@martynus.net>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gr2m/smartdate-input/issues"
  },
  "homepage": "http://gr2m.github.io/smartdate-input/",
  "dependencies": {
    "jquery": "^2.1.4",
    "moment-parseformat": "^0.0.13",
    "moment": "^2.10.6"
  },
  "devDependencies": {
    "beefy": "^2.1.5",
    "browserify": "^12.0.1",
    "chai": "^3.3.0",
    "chai-as-promised": "^5.1.0",
    "chalk": "^1.1.1",
    "gh-pages-deploy": "^0.3.0",
    "jquery": "^2.1.4",
    "mkdirp": "^0.5.1",
    "mocha": "^2.3.3",
    "moment": "^2.10.6",
    "moment-parseformat": "0.0.13",
    "node-static": "^0.7.7",
    "npmlog": "^1.2.1",
    "request": "^2.65.0",
    "rimraf": "^2.4.3",
    "sauce-connect-launcher": "^0.12.0",
    "semantic-release": "^6.0.3",
    "standard": "^3.11.1",
    "sv-selenium": "^0.2.6",
    "uglify-js": "^2.5.0",
    "webdriverio": "^3.2.6"
  },
  "gh-pages-deploy": {
    "staticpath": "demo",
    "noprompt": true
  },
  "standard": {
    "ignore": ["demo", "dist"]
  }
}
